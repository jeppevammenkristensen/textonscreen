<Window x:Class="Dirty.Display"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dirty"
        mc:Ignorable="d"
        Title="Display" Height="300" Width="300" WindowStyle="None">
    <Grid>
        <TextBlock TextAlignment="Center" HorizontalAlignment="Center" FontSize="36"  Text="{Binding Path=TextToDisplay, Mode=OneWay}"></TextBlock>
    </Grid>
</Window>
